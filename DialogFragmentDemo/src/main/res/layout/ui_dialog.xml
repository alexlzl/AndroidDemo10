<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="250dp"
              android:layout_height="186dp"
              android:background="@drawable/dialog_bg"
              android:orientation="vertical"
        >

    <ImageView
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:id="@+id/mIvClose"
            android:src="@drawable/iv_close_shadow"
            android:layout_gravity="right"
            />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="播得不错，赏！"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:textColor="#000000"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            />

    <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="-5dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_input_bonus_amount"
            >

        <EditText
                android:id="@+id/mEtBonusAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="@null"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="#151518"
                android:inputType="numberDecimal"
                android:textColorHint="#80000000"
                android:textCursorDrawable="@null"
                tools:text="1234.56"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="17sp"
                android:textColor="#151518"
                android:layout_marginRight="22dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>

    <TextView
            android:id="@+id/mTvGiveBonus"
            android:layout_width="240dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/give_bonus_selector"
            android:gravity="center"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="#ffffff"
            />
</LinearLayout>