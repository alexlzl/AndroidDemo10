<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="270dp"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_screen_transfer_invite_dialog"
              android:clickable="true"
        >

    <cn.iwgang.countdownview.CountdownView
            android:id="@+id/mCountDownTimber"
            android:layout_width="62dp"
            android:layout_height="26dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="11dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:background="@drawable/bg_screen_transfer_invite_counter"
            tools:text="30"
            app:isHideTimeBackground="true"
            app:isShowDay="false"
            app:isShowHour="false"
            app:isShowMinute="false"
            app:timeTextColor="@android:color/white"
            app:timeTextSize="@dimen/text_30pt"
            />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mFromAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/iv_sample"
            app:civ_border_width="0dp"
            />

    <TextView
            android:id="@+id/mInviteUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/text_34pt"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:singleLine="true"
            android:text="齐天大圣"
            />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_32pt"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="向你发起切屏邀请"
            />

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="29dp"
            android:rowCount="1"
            android:columnCount="2"
            >

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_column="0"
                android:gravity="center_horizontal"
                >

            <ImageView
                    android:id="@+id/mIvDeny"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/iv_deny_screen_transfer"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_dark_white_c"
                    android:textSize="@dimen/text_24pt"
                    android:text="拒绝"
                    />
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:layout_column="1"
                android:gravity="center_horizontal"
                >

            <ImageView
                    android:id="@+id/mIvAccept"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/iv_accept_screen_transfer"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_dark_white_c"
                    android:textSize="@dimen/text_24pt"
                    android:text="接收"
                    />
        </LinearLayout>

    </GridLayout>
</LinearLayout>