<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:background="#B2000000"
                                               android:clickable="true"
                                               tools:context=".CountdownFragment4Viewers"
        >

    <ImageButton
            android:id="@+id/mIbClose"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:src="@mipmap/iv_close_white"
            />

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mToAvatar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="25%"
            app:civ_border_width="0dp"
            tools:src="@drawable/iv_sample"
            />

    <TextView
            android:id="@+id/mToUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/mToAvatar"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_34pt"
            android:alpha="0"
            tools:text="to"
            tools:alpha="1"
            />

    <TextView
            android:id="@+id/mTvCountdownHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/mToUsername"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_30pt"
            android:alpha="0"
            android:text="直播马上开始"
            tools:alpha="1"
            />

    <com.github.piasy.fancytransitiondemo.CountdownAnimationTextView
            android:id="@+id/mCountDownAnim"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mTvCountdownHint"
            android:textSize="@dimen/text_64pt"
            android:textColor="@android:color/white"
            android:gravity="center"
            tools:text="5"
            />
</android.support.percent.PercentRelativeLayout>
